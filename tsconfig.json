{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true,
  }
}
